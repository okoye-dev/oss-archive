# Production Environment (Supabase S3)
# Copy this to .env.prod and update with your actual Supabase values

# Database Configuration
DB_HOST=your-db-host
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_NAME=oss-archive
DB_SSLMODE=require

# Server Configuration
PORT=6060
READ_TIMEOUT=30
WRITE_TIMEOUT=30
IDLE_TIMEOUT=120
SHUTDOWN_TIMEOUT=5
GIN_MODE=release
LOG_LEVEL=info

# S3 Configuration (Supabase)
S3_ENDPOINT=https://your-project-ref.supabase.co/storage/v1/s3
S3_REGION=us-north-1
S3_ACCESS_KEY_ID=your-supabase-access-key
S3_SECRET_ACCESS_KEY=your-supabase-secret-key
S3_USE_SSL=true
S3_BUCKET_NAME=your-bucket-name
S3_FORCE_PATH_STYLE=false

# Frontend Configuration
NEXT_PUBLIC_API_URL=/api
BACKEND_URL=http://127.0.0.1:6060
NODE_ENV=development
